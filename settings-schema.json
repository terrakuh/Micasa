{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"theme": {
			"type":"object",
			"properties": {
				"opacity": {
					"type":"number",
					"minimum": 0,
					"maximum": 1,
					"default": 0.6
				},
				"background": {
					"type": "string",
					"default": "#000000"
				}
			}
		}
	}
}
